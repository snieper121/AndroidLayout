<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Основные разрешения, которые не меняются -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <!-- RECEIVE_NOTIFICATIONS - это системное разрешение, его не нужно объявлять -->

    <!-- =================================================================== -->
    <!--           ИСПРАВЛЕННЫЙ БЛОК РАЗРЕШЕНИЙ ДЛЯ ХРАНИЛИЩА             -->
    <!-- =================================================================== -->

    <!-- 1. Разрешение для Android 11 (API 30) и выше. Дает доступ ко всем файлам. -->
    <!-- Именно эта строка заставит систему показать кнопку в настройках. -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <!-- 2. Старые разрешения для хранилища, ТОЛЬКО для версий Android ниже 10. -->
    <!-- Атрибут android:maxSdkVersion="29" говорит системе не использовать их на Android 11+ -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29" />


    <application
        android:name=".app.AndroidPEApplication"
        android:allowBackup="true"
        android:allowNativeHeapPointerTagging="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/androidpe_app_icon_dark"
        android:label="@string/app_name"
        android:roundIcon="@drawable/androidpe_app_icon_dark"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:resizeableActivity="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Application">
        
        <!-- 
          ВАЖНО: Удаляем эти атрибуты. Они конфликтуют с MANAGE_EXTERNAL_STORAGE 
          и являются причиной того, что кнопка в настройках не появляется.
        -->
        <!-- android:preserveLegacyExternalStorage="true" -->
        <!-- android:requestLegacyExternalStorage="true" -->

        <activity
            android:name=".app.CrashHandler$CrashActivity"
            android:theme="@style/Theme.Material3.DayNight" />
        
        <activity
            android:name=".activities.MainActivity"
            android:hardwareAccelerated="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.ProjectEditorActivity"
            android:hardwareAccelerated="true" />
        
        <activity
            android:name=".activities.CodeEditorActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".activities.PreferencesActivity"
            android:hardwareAccelerated="true" />
        <activity android:name=".activities.AboutAppActivity" />
    </application>

</manifest>
